{
  "manifest_version": 3,
  "name": "Smart Text Expander",
  "version": "1.1",
  "description": "Save hours of typing with text shortcuts",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Smart Text Expander"
  }
}